# Copy to .env and fill values
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_CHAT_ID=your_chat_id_here
# Comma-separated RSS feed URLs
NEWS_SOURCES=https://rss.cnn.com/rss/edition.rss,https://rss.nytimes.com/services/xml/rss/nyt/HomePage.xml
# How many items to fetch per source
MAX_PER_SOURCE=5
SUMMARY_LIMIT=220
# GDELT (optional) - comma-separated queries
GDELT_QUERIES=iran OR tehran,ایران OR تهران
GDELT_TIMESPAN=1day
GDELT_SORT=datedesc
GDELT_MAXRECORDS=25
# Optional site access gate
SITE_PASSWORD=change-me
